%tr
  %td
    = link_to_if(can?(:read, User), "#{u.name}", user_path(u.id))
  %td
    = u.email
  %td
    = "#{u.roles.collect{|r| r.name}}"
  %td
    = link_to_if(can?(:edit, User), image_tag("/icons/email_edit.png"), edit_user_path(u.id))
  %td
    = link_to_if(can?(:delete, User), image_tag("/icons/email_delete.png"), u, :confirm => "Are you sure you want to delete #{u.email}", :method => :delete)
